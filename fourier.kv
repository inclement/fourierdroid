#:import Window kivy.core.window.Window

<HomeScreen>:
    orientation: 'vertical'
    Button:
        text: '1D'
        on_press: root.manager.current = '1D'
    Button:
        text: '2D'
        on_press: root.manager.current = '2D'
    

<FourierManager>:
    id: rootid
    Screen:
        name: 'home'
        HomeScreen:
            manager: rootid
    Screen:
        name: '1D'
        Fourier1DScreen:
    Screen:
        name: '2D'
        Fourier2DScreen:

<Fourier1DScreen>:
    orientation: 'vertical'
    Fourier1DCanvas:
        id: canvas
        size_hint_y: None if Window.width < 0.9*Window.height else 1
        height: Window.width
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: sp(40)
        Button:
            text: 'real'
            on_press: canvas.editing = 'real'
        Button:
            text: 'imag'
            on_press: canvas.editing = 'imag'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: sp(40)
        Button:
            text: 'reset'
            on_press: canvas.reset()
        Button:
            text: 'Perform Fourier transform'
            on_press: canvas.perform_fourier_transform()
        Button:
            text: 'Perform inverse'
            on_press: canvas.perform_fourier_transform(inverse=True)

<Fourier1DCanvas>:
    canvas:
        Color:
            rgba: (0, 0.7, 0.2, 1)
        Line:
            points: [self.x, self.y, self.x+self.width, self.y]
            width: 2
        Line:
            points: [self.x+0.5*self.width, self.y, self.x+0.5*self.width, self.y+self.height]
            width: 2
    Label:
        text: '[color=ff0000]' + str(root.real_scale) + '[/color]'
        markup: True
        size: self.text_size
        size: sp(50), sp(20)
        text_size: self.size
        pos: root.x + 0.52*root.width, root.y + root.height - sp(20)
    Label:
        text: '[color=00ff00]' + str(root.imag_scale) + '[/color]'
        markup: True
        size: sp(50), sp(20)
        text_size: self.size
        pos: root.x + 0.52*root.width, root.y + root.height - sp(40)
    Label:
        text: '[color=0000ff]' + str(root.abs_scale) + '[/color]'
        markup: True
        size: sp(50), sp(20)
        text_size: self.size
        pos: root.x + 0.52*root.width, root.y + root.height - sp(60)
        

<Fourier2DCanvas>:
    square_x: self.x if self.height > self.width else self.x + 0.5*(self.width-self.height)
    square_y: self.y if self.width > self.height else self.y + 0.5*(self.height-self.width)
    square_width: min(self.width,self.height)
    square_height: min(self.width,self.height)

    canvas:
        Rectangle:
            texture: root.texture
            pos: (root.square_x,root.square_y)
            size: (root.square_width,root.square_height)
        Color:
            rgba: (0,0.7,0.2,1)
        Line:
            rectangle: (self.square_x,self.square_y,self.square_width,self.square_height)
            width: 2
        Line:
            points: [self.square_x+0.5*self.square_width,self.square_y,self.square_x+0.5*self.square_width,self.square_y+self.square_height]
        Line:
            points: [self.square_x,self.square_y+0.5*self.square_height,self.square_x+self.square_width,self.square_y+0.5*self.square_height]
        

<FourierDrawer>:
    canvas:
        Rectangle:
            texture: root.texture
            pos: root.pos
            size: root.size

    
<Fourier2DScreen>:
    orientation: 'vertical'
    Fourier2DCanvas:
        id: canvas
        size_hint_y: None if Window.width < 0.9*Window.height else 1
        height: Window.width
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: sp(40)
        Button:
            text: 'reset'
            on_press: canvas.reset()
        Button:
            text: 'k-space'
            on_press: canvas.mode = 'k-space'
        Button:
            text: 'Fourier\n phase'
            on_press: canvas.mode = 'Fourier phase'
        Button:
            text: 'Fourier\nintensity'
            on_press: canvas.mode = 'Fourier intensity'
    ScrollView:
        BoxLayout:
            orientation: 'horizontal'
    
